{
    "tasks": [
      {
        "type": "cppbuild",
        "label": "g++ build active file",
        "command": "/usr/bin/clang",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/bin/${fileBasenameNoExtension}",
          "-fsanitize=address",
          "-fsanitize=undefined",
          "-lm",
          "-lopenblas"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ],
    "version": "2.0.0"
  }